@model _22686640_Homework_Assignment_3.Models.borrow

@{
    ViewBag.Title = "Create";
}

<h2 style="color: #d5006d;">Create Borrow</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="border: 1px solid #d5006d; padding: 20px; border-radius: 10px; background-color: #ffffff;">
    <h4 style="color: #d5006d;">Borrow</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Student Field -->
    <div class="form-group">
        @Html.Label("Student", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("studentId", null, htmlAttributes: new { @class = "form-control", style = "border: 2px solid #d5006d;" })
            @Html.ValidationMessageFor(model => model.studentId, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Book Field -->
    <div class="form-group">
        @Html.Label("Book", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("bookId", null, htmlAttributes: new { @class = "form-control", style = "border: 2px solid #d5006d;" })
            @Html.ValidationMessageFor(model => model.bookId, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Taken Date Field -->
    <div class="form-group">
        @Html.Label("Taken Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.takenDate, new { @class = "form-control", type = "datetime-local", style = "border: 2px solid #d5006d;" })
            @Html.ValidationMessageFor(model => model.takenDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Brought Date Field -->
    <div class="form-group">
        @Html.Label("Brought Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.broughtDate, new { @class = "form-control", type = "datetime-local", style = "border: 2px solid #d5006d;" })
            @Html.ValidationMessageFor(model => model.broughtDate, "", new { @class = "text-danger" })
        </div>
    </div>


    <!-- Submit Button -->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" style="background-color: #d5006d; color: white; border: none; margin-top: 10px;" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary", style = "background-color: #d5006d; color: white; padding: 10px 15px; border: none; text-decoration: none; display: inline-block; margin-top: 10px;" })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
